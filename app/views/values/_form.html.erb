<%= simple_form_for(@value) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :exact_value %>
    <%= f.input :standard_value %>
    <%= f.input :accepted %>
    <%= f.association :field %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
