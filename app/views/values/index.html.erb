<h1>Listing values</h1>

<table>
  <thead>
    <tr>
      <th>Exact value</th>
      <th>Standard value</th>
      <th>Accepted</th>
      <th>Field</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @values.each do |value| %>
      <tr>
        <td><%= value.exact_value %></td>
        <td><%= value.standard_value %></td>
        <td><%= value.accepted %></td>
        <td><%= value.field %></td>
        <td><%= link_to 'Show', value %></td>
        <td><%= link_to 'Edit', edit_value_path(value) %></td>
        <td><%= link_to 'Destroy', value, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

